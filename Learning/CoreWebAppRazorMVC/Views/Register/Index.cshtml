@model RegisterViewModel

<h1>Please Register</h1>

@if (Model?.Name != null)
{
    <h4>Name: @Model.Name</h4>
}
@if (Model?.Age != null)
{
<h4>Age: @Model.Age</h4>
}
@if (Model?.Email != null)
{
    <h4>Name: @Model.Email</h4>
}

<form method="post" asp-controller="Register">
    <div class="form-group">
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Age"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Age" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Age" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-4">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Email" class="form-control" />
            </div>
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-sucess form-control">Submit</button>
</form>
